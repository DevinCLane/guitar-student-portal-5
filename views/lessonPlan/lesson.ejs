<%- include('partials/header') -%>
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-6">
            <h2><%= lessonPlan.title %></h2>
            <img class="img-fluid" src="<%= lessonPlan.image%>" />
            <div class="row justify-content-between">
                <%if(post.user == user.id){ %>
                <form
                    action="/lessonPlan/deleteLessonPlan/<%= post.id %>?_method=DELETE"
                    method="POST"
                    class="col-3"
                >
                    <button
                        class="btn btn-primary fa fa-trash"
                        type="submit"
                    ></button>
                </form>
                <%}%>
            </div>
        </div>
        <div class="col-3 mt-5">
            <p><%= lessonPlan.content %></p>
        </div>
        <div class="col-6 mt-5">
            <a class="btn btn-primary" href="/student/profile"
                >Return to student</a
            >
            <a class="btn btn-primary" href="/teacher/dashboard"
                >Return to teacher dashboard</a
            >
        </div>
    </div>
</div>

<%- include('partials/footer') -%>
