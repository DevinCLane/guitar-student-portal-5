<%- include('../partials/header') -%>
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-6">
            <h2>Set Your Password</h2>
            <form action="/students/setup-password" method="POST">
                <div class="mb-3">
                    <label for="password" class="form-label"
                        >New Password</label
                    >
                    <input
                        type="password"
                        class="form-control"
                        id="password"
                        name="password"
                        required
                    />
                </div>
                <div class="mb-3">
                    <label for="confirmPassword" class="form-label"
                        >Confirm Password</label
                    >
                    <input
                        type="password"
                        class="form-control"
                        id="confirmPassword"
                        name="confirmPassword"
                        required
                    />
                </div>
                <button type="submit" class="btn btn-primary">
                    Set Password
                </button>
            </form>
        </div>
    </div>
</div>
<%- include('../partials/footer') -%>
